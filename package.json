{
  "name": "redis-js-starter",
  "version": "0.1.0",
  "main": "server/index.js",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "deploy:css": "bunx @tailwindcss/cli -i ./styles/styles.css -o ./public/styles.css",
    "deploy:build": "bun build --target=bun . --outdir build/",
    "dev": "bun run --bun concurrently npm:dev:*",
    "dev:server": "bun run --watch .",
    "dev:css": "bunx @tailwindcss/cli -i ./styles/styles.css -o ./public/styles.css --watch",
    "docker": "docker compose down && docker compose up -d --build",
    "docker:redis": "docker compose down && docker compose up -d redis",
    "format": "prettier . --write",
    "start": "bun .",
    "ts": "bunx tsc"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.15",
    "@ai-sdk/google-vertex": "^3.0.25",
    "@ai-sdk/openai": "^2.0.27",
    "ai": "^5.0.39",
    "connect-redis": "^9.0.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "express-session": "^1.18.2",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "marked": "^16.2.1",
    "redis": "^5.8.2",
    "ulid": "^3.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/express-session": "^1.18.2",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.13",
    "@types/bun": "^1.2.21"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  }
}
