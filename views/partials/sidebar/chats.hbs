  <ul hx-swap-oob="outerHTML:#chats" id="chats" class="my-2 overflow-y-scroll">
    {{#each chats}}
      <li class="truncate cursor-pointer rounded hover:bg-gray-200 active:bg-gray-300{{#isEqual chatId=chatId currentChatId=../currentChatId}} bg-gray-300{{/isEqual}}">
        <form ws-send hx-disabled-elt="this" class="block w-full">
            <input type="hidden" name="cmd" value="switch_chat" />
            <input type="hidden" name="chatId" value="{{chatId}}" />
            <button type="submit" class="block w-full p-2 text-left text-gray-600">
                {{!-- Trim the end and add an elipsis --}}
                {{message}}
            </button>
        </form>
      </li>
    {{/each}}
  </ul>
